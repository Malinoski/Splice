<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <display-name>DWR Servlet</display-name>
        <servlet-name>dwr-invoker</servlet-name>
        <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletSpecialistAnalysisResponse</servlet-name>
        <servlet-class>org.lncc.martin.atoms.esp.ServletSpecialistAnalysisResponse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSpecialistAnalysisRequest</servlet-name>
        <servlet-class>org.lncc.martin.atoms.esp.ServletSpecialistAnalysisRequest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletSpecialistAnalysisRequest</servlet-name>
        <url-pattern>/ServletSpecialistAnalysisRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSpecialistAnalysisResponse</servlet-name>
        <url-pattern>/ServletSpecialistAnalysisResponse</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileDownloadHandler</servlet-name>
        <servlet-class>org.lncc.martin.atoms.esp.FileDownloadHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileDownloadHandler</servlet-name>
        <url-pattern>/FileDownloadHandler</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
